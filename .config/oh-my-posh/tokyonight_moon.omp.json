{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#c099ff",
          "style": "plain",
          "template": "<b>{{ .UserName }}{{ if .SSHSession }}@{{ .HostName }}{{end}}</b> ",
          "type": "session"
        },
        {
          "foreground": "#86e1fc",
          "style": "plain",
          "template": "{{ if .SSHSession }}󰲝 {{ end }} ",
          "type": "session"
        },
        {
          "foreground": "#82aaff",
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": "<b>{{ .Path }}</b> ",
          "type": "path"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#c3e88d",
          "properties": {
            "branch_icon": "",
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": ""
          },
          "style": "plain",
          "template": "{{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if or (.Working.Changed) (.Staging.Changed) (gt .StashCount 0)}} ·{{ end }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} ·{{ end }}{{ if .Staging.Changed }} \uF046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} · \uF0C7 {{ .StashCount }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#c3e88d",
          "foreground_templates": [
            "{{ if .Segments.Contains \"Git\" }}#ffc777{{ end }} "
          ],
          "properties": {
            "style": "austin"
          },
          "style": "plain",
          "template": "{{ .FormattedMs }} ",
          "type": "executiontime"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#c3e88d",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ff757f{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\u25b6 ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}}(Admin){{end}} {{.PWD}}",
  "transient_prompt": {
    "foreground": "#c7fb6d",
    "foreground_templates": [
      "{{ if gt .Code 0 }}#ff757f{{ end }}"
    ],
    "template": "\u25b6 "
  },
  "enable_cursor_positioning": true,
  "version": 3
}
