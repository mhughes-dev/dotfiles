# vim: ft=swayconfig

### Variables

# Mod4 -> Logo key
# Mod1 -> Alt key
set $mod Mod4

# Movement keys
set $left Left
set $down Down
set $up Up
set $right Right

# Terminal emulator
set $term uwsm-app -- alacritty

# Application launcher
set $menu walker

# Monitor names
set $monitor1 DP-3
set $monitor2 DP-4

### Output configuration

# Monitors
output $monitor1 pos 0 0
output $monitor1 subpixel rgb
output $monitor2 pos 2560 0
output $monitor2 subpixel rgb

# Wallpaper
output * bg /home/semilogic/.config/background.png fill


### Idle configuration
#
# Example configuration:
#
# exec swayidle -w \
#          timeout 900 'swaylock -f -c 000000' \
#          timeout 1800 'scrollmsg "output * power off"' resume 'scrollmsg "output * power on"' \
#          before-sleep 'swaylock -f -c 000000'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

exec uwsm-app -- swayidle -w \
    timeout 900 'swaylock -f -c 000000' \
    timeout 1200 'scrollmsg "output * power off"' resume 'scrollmsg "output * power on"'

### Input configuration

# Keyboard
input type:keyboard {
    xkb_layout "us"
    xkb_model "pc105"
    xkb_options "caps:escape"
    repeat_delay 250
    repeat_rate 40
}

